generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum MatchStatus {
  WAITING
  ONGOING
  FINISHED
}

enum Winner {
  NO_ONE
  WHITE
  BLACK
}

model User {
  id            Int     @id @default(autoincrement())
  userId        String  @unique
  username      String
  profilePic    String?

  whiteGames    Game[]  @relation("WhitePlayer")
  blackGames    Game[]  @relation("BlackPlayer")
  moves         Move[]

  createdAt     DateTime @default(now())
}

model Game {
  id              Int         @id @default(autoincrement())
  gameId          String      @unique

  whitePlayerId   String?
  blackPlayerId   String?

  whitePlayer     User?        @relation("WhitePlayer", fields: [whitePlayerId], references: [userId])
  blackPlayer     User?        @relation("BlackPlayer", fields: [blackPlayerId], references: [userId])

  status          MatchStatus
  winner          Winner      @default(NO_ONE)

  moves           Move[]

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}


model Move {
  id          Int      @id @default(autoincrement())

  gameId      String
  playerId    String

  fromSquare  String
  toSquare    String

  game        Game     @relation(fields: [gameId], references: [gameId])
  player      User     @relation(fields: [playerId], references: [userId])

  createdAt   DateTime @default(now())
}

